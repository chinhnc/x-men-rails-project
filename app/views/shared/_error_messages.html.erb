<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert-danger">
      <%= pluralize object.errors.count, t("error") %>.
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
