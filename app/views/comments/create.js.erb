<% if @comment.save %>
  $("#comment_count").html("<%= pluralize @comment.review.comments.count, t("comment.comment") %>");
  $("#error_messages").html("");
  $("#comments-list").append("<%= j render "comments/comment",
    comment: @comment %>");
  $("#comment_content_<%= @comment.review_id %>").val("")
<% else %>
  $("#error_messages").append("<%= j render "shared/error_messages", object: @comment %>");
<% end %>
